@model IEnumerable<Unidade>
@{
    ViewData["Title"] = "Index";
}
<h2 class="text-center">Recetario - Unidades</h2>
<h6 class="text-center">Gestionar las unidades en las que requiren los ingredientes</h6>
<!--Mensaje al ejecutar alguna tarea del crud-->
@if(TempData["mensaje"] != null){
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-sm-12">
        <div class="float-right">
            <a asp-action="Crear" asp-controller="Unidad" class="btn btn-sm btn-success">crear unidad de medida</a>
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="card-border">
        <div class="card-header">
            <h2 class="text-center"> Lista de Unidades de medida</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if(Model.Count() > 0)
                {
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m=>m.Nombre)</th>
                                <th>@Html.DisplayNameFor(m=>m.Descripcion)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m=>a.Nombre)</td>
                                    <td>@Html.DisplayFor(m=>a.Descripcion)</td>
                                    <td>
                                        <a class="btn btn-sm btn-primary" asp-action="Editar" asp-route-id="@a.IdUnidad">Editar</a>
                                        <a class="btn btn-sm btn-danger" asp-action="Borrar" asp-route-id="@a.IdUnidad">Borrar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }else
                {
                    <p> No hay registros...!</p>
                }
            </div>
        </div>
    </div>

</div>
